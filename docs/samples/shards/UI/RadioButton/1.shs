@wire(ui-wire {
  UI.Window(
    Position: @f2(0 0)
    Anchor: Anchor::Center
    Width: 700
    Height: 400
    Contents: {
      UI.CentralPanel({
        Once({
          2 >= choice
        })
        UI.RadioButton(
          Label: "Choice 1"
          Variable: choice
          Value: 1
        )
        UI.RadioButton("Choice 2" choice 2)
        UI.RadioButton("Choice 3" choice 3)
      })
    }
  )
} Looped: true)

{ui-behavior: ui-wire}