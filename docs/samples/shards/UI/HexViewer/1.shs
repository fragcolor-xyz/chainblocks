@wire(ui-wire {
  UI.Window(
    Title: "UI Hex Viewer"
    Position: @f2(0 0)
    Anchor: Anchor::Center
    Width: 700
    Height: 400
    Contents: {
        Once({
          "Hello shards!" >= text
        })
        
        UI.Horizontal(
          {
            "Text: " | UI.Label
            UI.TextField(text)
          }
        )
        
        text | UI.HexViewer
    }
  )
} Looped: true)

{ui-behavior: ui-wire}