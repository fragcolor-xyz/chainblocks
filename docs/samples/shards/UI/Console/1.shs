; Simple console
GFX.MainWindow(Contents: {
  ; Setup
  Table(ui-draw-queue Type: GFX.DrawQueue)
  GFX.UIPass(ui-draw-queue) >> render-steps

  ; UI
  UI({
    UI.CentralPanel({
      UI.Button("Say Hello" {Msg("Hello!")})
      CaptureLog(
        Size: 24
        MinLevel: "info"
        Pattern: "%^[%l]%$ [%Y-%m-%d %T.%e] %v"
      ) | String.Join | UI.Console
    })
  })

  GFX.Render(Steps: render-steps)
})
