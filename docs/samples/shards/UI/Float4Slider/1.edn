(GFX.MainWindow
 :Contents
 (->
  (Setup
   (GFX.DrawQueue) >= .ui-draw-queue
   (GFX.UIPass .ui-draw-queue) >> .render-steps)
  .ui-draw-queue (GFX.ClearQueue)

  (UI
   .ui-draw-queue
   (UI.CentralPanel
    (->
     (UI.Float4Slider
      :Variable .float4
      :Min (float4 0) :Max (float4 1))
     (ExpectFloat4))))

  (GFX.Render :Steps .render-steps)))
