GFX.MainWindow(
  Contents: {
    Once({
      GFX.DrawQueue >= ui-draw-queue
      GFX.UIPass(ui-draw-queue) >> render-steps
    })
    UI(
      ui-draw-queue
      UI.CentralPanel({
        Once({
          LoadImage("../../assets/ShardsLogo.png") = image
        })
        image | UI.PopupImageButton(
          ID: "Send message"
          Scale: @f2(0.1)
          Contents: {
            UI.Button(
              Label: "Send message"
              Action: {
                "Message sent!" | Log
              }
            )
          }
        )
        image | UI.PopupImageButton(
          ID: "Receive message"
          Size: @f2(150.0)
          AboveOrBelow: PopupLocation::Above
          MinWidth: 300.0
          Contents: {
            UI.Button(
              Label: "Receive message"
              Action: {
                "Message received!" | Log
              }
            )
          }
        )
      })
    )

    GFX.Render(Steps: render-steps)
  }
)
