

@wire(content {
  Once({
    Debug.DumpEnv
    Regent.Entity(Static: true) | Log("once entity - static")
    Regent.Entity(Static: false) | Log("once entity - non-static")
  })
  
  Regent.Entity
  Regent.Entity(Static: true)
  
  Regent.Entity(Static: false Enabled: (RandomInt(1) | Is(0)))
  Regent.Entity(Static: true Enabled: (RandomInt(1) | Is(0)))
  
  Repeat({
    Math.MatIdentity | Regent.Entity ; Dynamic entity
  } Times: 2000)
  
  RandomInt(200) = n
  Repeat({
    Regent.Entity ; Dynamic entity
  } Times: n)
  
  Pass
} Looped: true)

@wire(main {
  Regent.Context = context
  Regent.WithContext({
    Step(content)
  } context)
  Regent.End(context)
  
  ; Once({
  ;   Regent.Dump(context)
  ; } Every: 20.0)
  
} Looped: true)

@mesh(root)
@schedule(root main)
@run(root FPS: 60.0)
