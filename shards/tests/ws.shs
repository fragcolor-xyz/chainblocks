@mesh(root)

@wire(ws-test {
  Once({
    "ws://echo.websocket.events/ws" | WS.Client = ws-client |
    Log("ws-client")
  })
  WS.ReadString(ws-client) |
  Log("Reading string")
  "Hello!" | WS.WriteString(ws-client)
  WS.ReadString(ws-client) |
  Log("Reading string")
  Assert.Is("Hello!" true)
})

@schedule(root ws-test)
@run(root)

@schedule(root ws-test)
@run(root)

