@define(no-stroke {Color: @color(0 0 0 0) Width: 0.0})
@define(stroke-2 {Color: @color(255 255 255) Width: 2.0})
@define(stroke-4 {Color: @color(255 200 255) Width: 4.0})

@wire(main {
  Once({
    GFX.DrawQueue = ui-draw-queue
    GFX.UIPass(ui-draw-queue) >> render-steps
  })
  GFX.MainWindow(Title: "Shards Window" Width: 1280 Height: 720 Contents: {
    UI({
      ; UI.Window(Title: "1" Contents: {
      ;   UI.Settings
      ; })
      UI.Window(Title: "Shards" Contents: {
        UI.LayoutClass(
          MainDirection: LayoutDirection::TopDown
          FillWidth: true
          FillHeight: true
        ) >= left-to-right-layout-class
        UI.Layout(UI.Shards left-to-right-layout-class)
      })
    }) | UI.Render(ui-draw-queue)
    GFX.Render(Steps: render-steps)
  })
} Looped: true)

@mesh(root)
@schedule(root main)
@run(root FPS: 60)
