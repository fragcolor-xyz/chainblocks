@include("hello2.shs") ; if macro

@mesh(main)

@if(@test-device {
  @wire(main-audio {
    Audio.Engine

    Once({
      "./data/Ode_to_Joy.ogg" | Audio.Sound = game-on
    })

    game-on | Audio.Start(Looped: true)
    Pause(5.0)
    game-on | Audio.Stop
    Pause(1.0)
    Stop
  } Looped: true)

  @schedule(main main-audio)
  @run(main FPS: 60) | Assert.Is(true)
} none)
