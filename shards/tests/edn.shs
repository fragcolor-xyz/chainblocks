@mesh(main)

@wire(uglify {
    "general.edn" | ; not sure if these files should be updated also
    FS.Read |
    EDN.Uglify(["WriteFile" {
        = input 
        Sequence(output)
        input |
        ForEach({
            ExpectString |
            Match(["test.bin" {
                "testfile.bin" >> output
                none {
                    >> output
                }
            }])
        })
        output
    }]) = ugly1
    ; EDN.Parse | Log
    "general.ugly.edn" |
    FS.Write(ugly1 Overwrite: true)|
    Log
    "loader.clj" |
    FS.Read |
    EDN.Uglify = ugly2
    "loader.ugly.clj" |
    FS.Write(ugly2 Overwrite: true)|
    Log
    loader.clj |
    FS.Read |
    EDN.Uglify = ugly3
    "bgfx.ugly.clj" |
    FS.Write(ugly3 Overwrite: true)|
    Log

    "pp" = prefix
    "(* 2 2)" | EDN.Eval | Assert.Is(4 true)
    "(def available 1)" | EDN.Eval
    "available" | EDN.Eval | Assert.Is(1 true)
    "(deflocal! available 2)" | EDN.Eval(false)
    "available" | EDN.Eval | Assert.Is(1 true)
    "(def test 11)" | EDN.Eval(Prefix: prefix)
    "pp/test" | EDN.Eval | Assert.Is(11 true)
    "test" | EDN.Eval(Prefix: prefix) | Assert.Is(11 true)
})

@schedule(main uglify)
@run(main)