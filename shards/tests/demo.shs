; Sample 1

@mesh(root)

@wire(wire-1 {
    Get(x Default: 0) |
    Log |
    Math.Inc(x)
} Looped: true)

@wire(wire-2 {
    Get(x Default: 0) |
    Log
} Looped: true)

@schedule(root wire-1)
@schedule(root wire-2)

; Sample 2

@wire(wire-3 {
    Get(x Default: 0) |
    Log 
    Pause 
    Math.Inc(x)
} Looped: true)

@wire(wire-4 {
    Get(x Default: 0) |
    Log
} Looped: true)

@schedule(root wire-3)
@schedule(root wire-4)

@run(root 0.1 1)